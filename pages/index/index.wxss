/**index.wxss**/
page,
.container {
  width: 100%;
  height: 100%;
}

.nav {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #f7f7f7;
  font-size: 16px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.nav-item {
  display: inline-block;
  padding-right: 20px;
  text-align: center;
}
.nav-item:first-child{
  padding-left: 20px;
}
.nav-item text{
  position: relative;
}
.nav-border{
  width: 100rpx;
  height: 2rpx;
  background-color: red;
  position: absolute;
  left: 0;
  top: 78rpx;
}
.nav-item.active {
  color: red;
}

.tab-box {
  background: #999;
  padding-top: 80rpx;
  height: 100%;
  box-sizing: border-box;
}

.tab-content {
  overflow-y: scroll;
}